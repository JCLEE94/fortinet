{
  "info": {
    "name": "FortiGate Nextrade API Collection",
    "description": "Comprehensive test collection for FortiGate and FortiManager APIs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:7777"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/health",
        "header": []
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is healthy\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql(\"healthy\");",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "FortiManager Status",
      "request": {
        "method": "GET", 
        "url": "{{base_url}}/api/fortimanager/status",
        "header": []
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"FortiManager connected\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql(\"connected\");",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Path Analysis - Internal to DMZ",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/fortimanager/analyze-packet-path",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"src_ip\": \"192.168.1.10\",\n  \"dst_ip\": \"172.16.10.100\",\n  \"port\": 443\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Analysis successful\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.eql(true);",
              "});",
              "",
              "pm.test(\"Has path information\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.path).to.be.an('array');",
              "    pm.expect(jsonData.path.length).to.be.above(0);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Path Analysis - Internal to Internet", 
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/fortimanager/analyze-packet-path",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"src_ip\": \"192.168.50.20\",\n  \"dst_ip\": \"8.8.8.8\",\n  \"port\": 443\n}"
        }
      }
    },
    {
      "name": "Path Analysis - Guest to Internal (Should Block)",
      "request": {
        "method": "POST",
        "url": "{{base_url}}/api/fortimanager/analyze-packet-path", 
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"src_ip\": \"10.10.1.50\",\n  \"dst_ip\": \"192.168.1.10\",\n  \"port\": 22\n}"
        }
      }
    },
    {
      "name": "FortiGate Policies List",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/api/advanced-fortigate/policies",
        "header": []
      }
    },
    {
      "name": "WebSocket Status", 
      "request": {
        "method": "GET",
        "url": "{{base_url}}/ws/status",
        "header": []
      }
    },
    {
      "name": "System Metrics",
      "request": {
        "method": "GET",
        "url": "{{base_url}/api/monitoring/metrics",
        "header": []
      }
    }
  ]
}