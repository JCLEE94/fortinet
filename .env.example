# =============================================================================
# FortiGate Nextrade - 환경변수 예제 파일
# 실제 사용시 .env 파일로 복사하고 값을 설정하세요
# =============================================================================

# =============================================================================
# 애플리케이션 기본 설정
# =============================================================================
APP_MODE=production
DEBUG=false
LOG_LEVEL=info
VERSION=1.0.0

# Web 서버 설정
WEB_APP_HOST=0.0.0.0
WEB_APP_PORT=7777
WEBSOCKET_PORT=8765
METRICS_PORT=9090

# =============================================================================
# Docker 컨테이너 설정
# =============================================================================
CONTAINER_NAME=fortinet
HOSTNAME=fortinet
REDIS_CONTAINER_NAME=fortinet-redis

# Docker 이미지 설정
DOCKER_REGISTRY=registry.jclee.me
DOCKER_IMAGE_NAME=fortinet
DOCKER_TAG=latest

# GitOps 빌드 메타데이터 (CI/CD에서 자동 설정)
BUILD_DATE=
BUILD_TIMESTAMP=
GIT_COMMIT=
GIT_SHA=
GIT_BRANCH=
IMMUTABLE_TAG=
REGISTRY_URL=registry.jclee.me

# =============================================================================
# FortiGate 설정
# =============================================================================
FORTIGATE_HOST=
FORTIGATE_PORT=443
FORTIGATE_API_TOKEN=
FORTIGATE_VERIFY_SSL=false

# =============================================================================
# FortiManager 설정
# =============================================================================
FORTIMANAGER_HOST=
FORTIMANAGER_PORT=541
FORTIMANAGER_USERNAME=
FORTIMANAGER_PASSWORD=
FORTIMANAGER_VERIFY_SSL=false
FORTIMANAGER_DEFAULT_ADOM=root

# =============================================================================
# 성능 및 워커 설정
# =============================================================================
WORKERS=4
WORKER_CLASS=gevent
WORKER_CONNECTIONS=1000
MAX_REQUESTS=1000
TIMEOUT=120

# =============================================================================
# Redis 캐시 설정
# =============================================================================
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# =============================================================================
# 보안 설정
# =============================================================================
SECRET_KEY=change-this-secure-key-in-production
INTERNAL_NETWORKS=192.168.0.0/16,172.16.0.0/12,10.0.0.0/8
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# 헬스체크 설정
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_START_PERIOD=60s
HEALTH_CHECK_RETRIES=3

# =============================================================================
# Docker 네트워크 및 볼륨 설정
# =============================================================================
NETWORK_NAME=fortinet-network

# 볼륨 이름 설정
DATA_VOLUME_NAME=fortinet-data
LOGS_VOLUME_NAME=fortinet-logs
TEMP_VOLUME_NAME=fortinet-temp
CONFIG_VOLUME_NAME=fortinet-config
CACHE_VOLUME_NAME=fortinet-cache
STATIC_VOLUME_NAME=fortinet-static
UPLOADS_VOLUME_NAME=fortinet-uploads
REDIS_DATA_VOLUME_NAME=fortinet-redis-data

# =============================================================================
# 시스템 리소스 설정
# =============================================================================
TMPFS_SIZE=512m

# =============================================================================
# Traefik 리버스 프록시 설정 (선택사항)
# =============================================================================
TRAEFIK_ENABLE=false
TRAEFIK_HOST=fortinet.local
TRAEFIK_TLS=false

# =============================================================================
# 백업 및 유지보수 설정
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=daily
LOG_RETENTION_DAYS=30
